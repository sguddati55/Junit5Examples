node {
    properties([
  parameters([
    string(name: 'SUT_NAME', defaultValue: 'Test', description: 'Which planet are we on?'),
  ]),
  pipelineTriggers([
    parameterizedCron('''
        * * * * * %SUT_NAME=Test;
        */2 * * * * %SUT_NAME=Dev
    ''')
  ])
])

        stage('Example') {
            
                echo "${env.emailTo}"
                echo "${env.slackTo}"
                script { currentBuild.description = "${params.SUT_NAME}" }
            
        }
    

}
    def mvnHome
    def javaHome
    stage('Preparation') { // for display purposes
        // Get some code from a GitHub repository
        git 'https://github.com/sguddati55/Junit5Examples'
      
    }
    stage('Build') {
        // Run the maven build
        withEnv([
            "MVN_HOME=$mvnHome",
            "JAVA_HOME=$javaHome",
            "PATH=$javaHome\bin:$PATH"
        ]) {
            //bat label: 'RunMvn', returnStatus: true, 
                script: '"%MVN_HOME%\\bin\\mvn" -Dmaven.test.failure.ignore clean package'        
                
          }

        echo "Maven successfully completed!!"
    }
    


